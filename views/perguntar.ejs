<%- include('partials/header.ejs') %>
<body>  
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar Perguntas</h3>
            </div>
            <div class="card-body">
                <form method="post" action="/salvarpergunta">
                <label>Titulo</label>
                <input type="text" placeholder="Titulo" class="form-control" name="titulo" required>
                <br>
                <label>Descrição</label>
                <textarea placeholder="Descreva sua pergunta aqui" class="form-control" name="descricao" required></textarea>
                <br>
                <button class="btn btn-success">Enviar</button>
                </form>
            </div>
        </div>     
    </div>
</body>
